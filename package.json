{
  "name": "@shaungrady/homebridge-security-floodlights",
  "displayName": "Security Floodlights",
  "version": "0.4.0",
  "description": "HomeKit security lighting",
  "homepage": "https://github.com/shaungrady/homebridge-security-floodlights",
  "repository": "github:shaungrady/homebridge-security-floodlights",
  "author": "Shaun Grady",
  "license": "MIT",
  "keywords": [
    "homebridge-plugin"
  ],
  "main": "/plugin/index.js",
  "files": [
    "plugin/**/*",
    "config.schema.json"
  ],
  "engines": {
    "node": ">=10.17.0",
    "homebridge": ">=1.3.0"
  },
  "scripts": {
    "start": "tsc && nodemon",
    "build": "rimraf ./plugin && tsc",
    "postbuild": "replace-in-file 'v0.0.0' \"v$npm_package_version\" ./plugin/constants.*",
    "prepack": "yarn build",
    "preversion": "yarn build"
  },
  "dependencies": {
    "nanoid": "^3.3.6",
    "rxjs": "^6.6.6"
  },
  "devDependencies": {
    "@types/node": "^14.14.31",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "homebridge": "^1.6.1",
    "homebridge-config-ui-x": "^4.40.0",
    "husky": "^5.1.3",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "prettier-plugin-import-sort": "^0.0.6",
    "replace-in-file": "^6.2.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "volta": {
    "node": "14.16.0",
    "yarn": "1.22.10"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
